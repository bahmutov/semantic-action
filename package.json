{
  "name": "semantic-action",
  "description": "Flexible action based on semantic commits: npm publish, deploy",
  "version": "0.0.0-placeholder",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com> (https://glebbahmutov.com)",
  "bin": {
    "semantic-action": "bin/semantic-release.js"
  },
  "bugs": {
    "url": "https://github.com/bahmutov/semantic-action/issues"
  },
  "dependencies": {
    "@semantic-release/commit-analyzer": "^2.0.0",
    "@semantic-release/condition-travis": "^5.0.2",
    "@semantic-release/error": "^1.0.0",
    "@semantic-release/last-release-npm": "^1.2.1",
    "@semantic-release/release-notes-generator": "^2.0.0",
    "git-head": "^1.2.1",
    "github": "^8.0.0",
    "lodash": "^4.0.0",
    "nerf-dart": "^1.0.0",
    "nopt": "^4.0.0",
    "normalize-package-data": "^2.3.4",
    "npmconf": "^2.1.2",
    "npmlog": "^4.0.0",
    "parse-github-repo-url": "^1.3.0",
    "require-relative": "^0.8.7",
    "run-auto": "^2.0.0",
    "run-series": "^1.1.3",
    "semver": "^5.2.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.4",
    "cz-conventional-changelog": "^1.1.4",
    "mkdirp": "^0.5.1",
    "mock-spawn": "^0.2.6",
    "nixt": "^0.5.0",
    "nock": "^9.0.2",
    "npm-registry-couchapp": "^2.6.12",
    "nyc": "^10.0.0",
    "prettier-standard": "^6.0.0",
    "proxyquire": "^1.7.3",
    "rimraf": "^2.5.0",
    "standard": "^10.0.0",
    "tap": "^10.0.1"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "bin",
    "src"
  ],
  "homepage": "https://github.com/bahmutov/semantic-action#readme",
  "keywords": [
    "author",
    "automation",
    "changelog",
    "module",
    "package",
    "publish",
    "release",
    "semver",
    "version"
  ],
  "license": "MIT",
  "main": "bin/semantic-release.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/semantic-action.git"
  },
  "scripts": {
    "pretty": "prettier-standard 'bin/*.js', 'src/*.js'",
    "prelint": "npm run pretty",
    "lint": "standard --verbose --fix bin/*.js src/*.js",
    "pretest": "npm run lint",
    "semantic-release": "./bin/semantic-release.js pre && npm publish && ./bin/semantic-release.js post",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "tap --no-cov test/scenarios/*.js",
    "test:unit": "nyc tap --no-cov test/specs/*.js"
  }
}
